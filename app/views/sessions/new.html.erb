<% provide(:title, "Sign In") %>
<div class="translucent-form-overlay">
  <%= form_for(:session, url: login_path) do |f| %>
    <center><%= image_tag('cmu.png', size: "150x150")%></center>
    </br><center><h3>Sign In</h3></center>
    </br><center><h6>Log in as a student or mentor</h6></center>
    </br>
    <div class="row columns">
      <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
    </br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </br>
      <%= f.submit "Sign In", class: "primary button expanded search-button"%>
    </br></br>
    <p>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-danger" %>
  <% end %>
  </p>

  </br>
    <center><p>New user? <%= link_to "Sign up now!", root_path %></p></center>
  </div>
</div>
<%end%>

    