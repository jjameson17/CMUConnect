<!-- Sample 2-->
<!-- Posts panel container -->
<div class="posts-panel grid">

  <!-- Panel's header -->
  <header class="panel-header">
    <h1 class="panel-title">Public Forum</h1>
  </header>

  <!-- Panel's content -->
  <div class="panel-content">

    <!-- Pinned post section -->
    <section class="pinned-post">
      <!-- Post item -->

      <div class="post-item">

        <!-- Post's thumbnail -->
        <a href="#" class="post-thumbnail">
          <img src="https://static.pexels.com/photos/24587/pexels-photo-24587.jpg" alt="">
        </a>

        <!-- Post's text -->
        <div class="post-text">

          <!-- Post's title -->
          <a href="#">
            <h3 class="post-title">Information Session Next Wednesday</h3>
          </a>
          <div class="post-meta">
            <span class="meta"><span class="meta-icon fa fa-user-circle-o" aria-hidden="true"></span><a class="meta-text">Ryan '16</a></span>
            <span class="meta"><span class="meta-icon fa fa-clock-o" aria-hidden="true"></span><span class="meta-text">11/5/2017 4:30 PM</span></span>
          </div>

          <!-- Post's summary -->
          <div class="post-summary">
            <p>Hey everyone! I will be in town next Wednesday with my company holding an information session for potential full-time job and internship opportunities available.  Please stop by and be sure to bring your resume!
              <a href="#" class="post-read-more">Read more<span class="fa fa-chevron-circle-right" aria-hidden="true"></span></a>
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Posts list -->
    <section class="posts-list">
      <div class="post-item">
  
        <div class="post-text">
          <a href="#">
            <h3 class="post-title">Information Session Next Wednesday</h3>
          </a>
          <div class="post-meta">
            <span class="meta"><span class="meta-icon fa fa-user-circle-o" aria-hidden="true"></span><a class="meta-text">Ryan '16</a></span>
            <span class="meta"><span class="meta-icon fa fa-clock-o" aria-hidden="true"></span><span class="meta-text">11/5/2017 4:30 PM</span></span>
          </div>
        </div>
      </div>

      <div class="post-item">

        <div class="post-text">
          <a href="#">
            <h3 class="post-title">Case Interview Preparation?</h3>
          </a>
          <div class="post-meta">
            <span class="meta"><span class="meta-icon fa fa-user-circle-o" aria-hidden="true"></span><a class="meta-text">Jimmy, IS '18</a></span>
            <span class="meta"><span class="meta-icon fa fa-clock-o" aria-hidden="true"></span><span class="meta-text">11/4/2017 9:15 PM</span></span>
          </div>
        </div>
      </div>

      <div class="post-item">

        <div class="post-text">
          <a href="#">
            <h3 class="post-title">Former IS Major In Town</h3>
          </a>
          <div class="post-meta">
            <span class="meta"><span class="meta-icon fa fa-user-circle-o" aria-hidden="true"></span><a class="meta-text">Megan '15</a></span>
            <span class="meta"><span class="meta-icon fa fa-clock-o" aria-hidden="true"></span><span class="meta-text">11/4/2017 11:45 AM</span></span>
          </div>
        </div>
      </div>

      <div class="post-item">

        <div class="post-text">
          <a href="#">
            <h3 class="post-title">What MechE classes should I take junior spring?</h3>
          </a>
          <div class="post-meta">
            <span class="meta"><span class="meta-icon fa fa-user-circle-o" aria-hidden="true"></span><a class="meta-text">Nicole MechE '19</a></span>
            <span class="meta"><span class="meta-icon fa fa-clock-o" aria-hidden="true"></span><span class="meta-text">11/4/2017 10:50 AM</span></span>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>


